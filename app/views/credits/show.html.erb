<div class="package-item-modal modal fade" aria-hidden="true" aria-labelledby="exampleModalLabel" role="dialog" tabindex="-1" >
  <div class="modal-dialog modal-lg" role="document"> 
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="exampleModalLabel" class="modal-title">
        	Package details
        </h5>
        <button class="close" aria-label="Close" data-dismiss="modal" type="button" >
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
      	<h5><%= @package.name %></h5>
      	<p>This package will provide you credits as mentioned here.</p>
      	<div class="characters">
      		<p> Characters <span><%= @package.total_number_of_characters.to_i %><small> characters</small></span></p>
      	</div>
      	<div class="credits">
      		<p> Credits <span><%= @package.total_credits.to_i %><small> credits</small></span></p>
      	</div>
      	<div class="bonus">
      		<p> Bonus <span><%= @package.bonus %></span><small> free credits</small></p>
      	</div>
      </div>
      <div class="modal-footer">
      	<%= link_to 'Add package', credits_path(id: @package.id), class: 'btn btn-success', method: 'post' %>
      </div>
    </div>
  </div>
</div>
