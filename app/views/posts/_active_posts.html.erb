<% @posts.each do |post|%>

	<% if post.status == "Pending"%>
		
		<div class= "container post">
			<small class = "postid center"> <%= post.id %></small><br>
		  <div class = "pull-right post_status"><small>Post Status:</small> <small style = "color: green;"><%= post.status%></small></div>
		  <div class = "pull-left post_status"><small> Created <%= time_ago_in_words(post.created_at)%> ago </small></div><br>
		  <div class = "org_text"><p class =" center original_text"><%= simple_format(post.original_text)%></p></div><br>
		  <div class="row">
		  &nbsp;&nbsp;Category:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.category.name%>
		  &nbsp;</h4>
		  Language:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post_language post.language %></h4></div><br><br>
		  <div class="selected-tags ">
		  
		    <%post.tags.each do |pos|%>
			    <span class="label label-info" >
			      <%= pos.name %>
			      <button class="remove-lang" type="button" >
			      </button>
			    </span>
		    <% end %>
		 
		  </div>
		  <br/>
		  <br/>
		</div>



  <% elsif post.status == "Edited"%>
		
		<% if post.edited_text == nil %>
   
     <div class= "container post">
			<small class = "postid center"> <%= post.id %></small><br>
			<div class = "pull-right post_status"><small>Post Status:</small> <small style = "color: #FFBA01;"><%= post.status%></small></div>
			<div class = "pull-left post_status"><small> Created <%= time_ago_in_words(post.created_at)%> ago</small></div><br>
			<br/>
						<label>Original text</label>
						<br/>
						<div class="org_text left">
							<%= simple_format(post.original_text) %>
						</div>
					
						<div class="container" style = "background-color: white;">
								<h3>Your Text is Perfect</h3>
							</div>
     <br/>
			<div class="row">
			&nbsp;&nbsp;Category:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.category.name%>
				 &nbsp;</h4>
			Language:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post_language post.language%></h4></div><br>
			<div class="selected-tags ">
			
			  <%post.tags.each do |pos|%>
			    <span class="label label-info" >
			      <%= pos.name %>
			      <button class="remove-lang" type="button" >
			      </button>
			    </span>
			  <% end %>
		  
		  </div>
			<br/>
			<div class = "pull-left post_status"><small>Edited <%= time_ago_in_words(post.updated_at)%> ago. By 
			
				<% post.tutors.each do |tutor| %>
						<% if post.tutor_id == tutor.id %>
						 <%= tutor.full_name %>
					   <% end %>	
					 <% end %>
			
					</small>
			</div><br>
			<div class="pull-right buttons">
				<%= button_to 'Decline', {:controller => "posts", :action => "declineapp", :id => post.id},
				    {:class => "buttonDec"}%>
			</div>
			<div class="pull-right buttons">
				<%= button_to 'Accept', {:controller => "posts", :action => "acceptapp", :id => post.id},
				    {:class => "buttonAcc" }%>
			</div>
		</div>
  
		<% elsif post.edited_text.present? %>



		<script type="text/javascript">
	$(document).ready(function() {
		var diff = $(".picadiff-<%=post.id%>").picadiff({
			leftContainer: '.left-<%=post.id%>',
			rightContainer: '.right-<%=post.id%>',
		});
		console.log(diff)
	});
</script>
   
   <div class= "container post">
		<small class = "postid center"> <%= post.id %></small><br>
			<div class = "pull-right post_status"><small>Post Status:</small> <small style = "color: #FFBA01;"><%= post.status%></small></div>
			<div class = "pull-left post_status"><small> Created <%= time_ago_in_words(post.created_at)%> ago</small></div><br>
			<br/>
		 <div class="picadiff-<%=post.id%>">
				
				<div class="picadiff-content">
					<div class="left-content">
						<label>Original text</label>
						<br/>
						<div class="org_text left-<%=post.id%>">
							<%= post.original_text %>
						</div>
					</div>
					<div class="right-content">
						
							<label>Edited text</label><br/>
							<div class="org_text right-<%=post.id%>" style = "background-color: white;">
								<%= post.edited_text %>
							</div>
							
					</div>
				</div>
			</div>
		  <br/>
			<div class="row">
			&nbsp;&nbsp;Category:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.category.name%>
				 &nbsp;</h4>
			Language:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post_language post.language%></h4></div><br>
			<div class="selected-tags ">
			  <%post.tags.each do |pos|%>
			    <span class="label label-info" >
			      <%= pos.name %>
			      <button class="remove-lang" type="button" >
			      </button>
			    </span>
			  <% end %>
		  </div>
			<br/>
			<div class = "pull-left post_status"><small>Edited <%= time_ago_in_words(post.updated_at)%> ago. By 
				<% post.tutors.each do |tutor| %>
						<% if post.tutor_id == tutor.id %>
						 <%= tutor.full_name %>
					   <% end %>	
					 <% end %>
					
					</small>
			</div><br>
			<div class="pull-right buttons">
				<%= button_to 'Decline', {:controller => "posts", :action => "declineapp", :id => post.id},
				    {:class => "buttonDec"}%>
			</div>
			<div class="pull-right buttons">
				<%= button_to 'Accept', {:controller => "posts", :action => "acceptapp", :id => post.id},
				    {:class => "buttonAcc" }%>
			</div>
		</div>
  <% end %>
 
  <% elsif post.status == "SubmittedToAdmin"%>
		<div class= "container post">
			<small class = "postid center"> <%= post.id %></small><br>
			<div class = "pull-right post_status"><small>Post Status:</small> <small style = "color: #581845;">Submitted To Admin</small></div>
			<div class = "pull-left post_status"><small> Created <%= time_ago_in_words(post.created_at)%> ago. </small></div><br>
			<div class = "org_text"><p class =" center original_text"><%= simple_format(post.original_text)%></p></div><br>
			<div class="row">
			&nbsp;&nbsp;Category:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.category.name%>
				  &nbsp;</h4>
			Language <h4 class ="pull-left" style="color:#B1A7A7;"> &nbsp;<%= post_language post.language%></h4></div>
			<div class="selected-tags ">
       <%post.tags.each do |pos|%>
        <span class="label label-info" >
          <%= pos.name %>
          <button class="remove-lang" type="button" >
          </button>
        </span>
       <% end %>
      </div><br><br>
			<% if post.edited_text == nil %>
							<div class="container" style = "background-color: white;">
								<h2>Your Text is Perfect</h2>
							</div>
						<% else %>
							<label>Edited text</label><br/>
							<div class="org_text right" style = "background-color: white;">
								<%= simple_format(post.edited_text) %>
							</div>
						<% end %>
			<div class = "pull-left post_status">
				<small>Edited <%= time_ago_in_words(post.updated_at)%> ago.
			  By 
				<% post.tutors.each do |tutor| %>
					<% if post.tutor_id == tutor.id %>
					 <%= tutor.full_name %>
				   <% end %>	
				 <% end %>
			</small>
		
			</div>
			<br>
</div>
  <%end%>
<%end%>
<br/><br/>
<div class = "centera">
	<%= will_paginate @posts %>
</div>


