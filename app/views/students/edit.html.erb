<div class="container">
<div class="row">
	<div class="col-12 offset-1">
		<div class="form-area mt-4">
			<%= simple_form_for @student, url: student_path(id: current_user.id), method: :put, html: {multipart: true} do |f| %>
				<h3>Personal Information</h3>
				<%= f.input :username %>
				<%= f.input :full_name, label: 'Name' %>
				<%= f.input :occupation %>
				<%= f.input :city %>
				<%= f.input :country %>
				<%= f.input :native_language, collection: Language.all, label_method: :name, value_method: :id %>
        <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 100, end_year: Date.today.year %>
				<%= f.input :gender, collection: User.genders, include_blank: false %>
				<%= f.input :profile_pic, as: :file, label: "Profile Picture" %>
				<div class="action mb-4 float-right">
        	<%= f.submit 'Update', class: 'btn btn-success' %>
        </div>
			<% end %>
		</div>
	</div>
</div>
</div>
