<div class="container mt-4">
  <div class="col-12 offset-3">
    <div class="form-area">
      <h3>Fill your info</h3>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <% if params[:user].present? %>
          <%= hidden_field_tag :user_type, 'Tutor' %>
        <% end %>

        <%= f.input :username %>
        <%= f.input :full_name %>
        <%= f.input :email, autofocus: true, autocomplete: "email" %>
        <% if params[:user] == 'tutor' %>
          <%= f.input :city %>
          <%= f.input :country %>
          <%= f.label :languages %>
          <%= f.association :languages, collection: Language.order(:name), include_blank: false, label: false, input_html: { class: "multiselect-search form-control", multipe: "multipe" } %>
          <%= f.input :qualification %>
          <%= f.input :occupation %>
        <% end %>

        <%= f.input :password, autocomplete: "new-password", label: "Password <em>(6 characters minimum)</em>".html_safe %>

        <%= f.input :password_confirmation, autocomplete: "new-password" %>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>