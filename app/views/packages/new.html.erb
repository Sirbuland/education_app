<div class="row">
	<div class="col-12 offset-1">
		<div class="form-area mt-4">
			<%= simple_form_for @package, url: packages_path, method: :post do |f| %>
				<h3>Create a new package</h3>
				<%= f.input :name, label: 'Package Name', placeholder: 'Package Name' %>
				<%= f.input :price, placeholder: 'Price' %>
				<%= f.input :total_number_of_characters, placeholder: 'Total Number of Characters' %>
				<%= f.input :total_credits, placeholder: 'Total Credits' %>
				<%= f.input :bonus, label: 'Bonus (Free credits for this package)', placeholder: 'Bonus' %>

				<div class="action mb-4">
        	<%= f.submit 'Create', class: 'btn btn-success' %>
        </div>
			<% end %>
		</div>
	</div>
</div>