<div class="container">
	<div class="heading mt-4 mb-2">
		<% if current_user.super_admin %>
			<h3 class="float-right-left">All Tags</h3>
			<%= link_to 'Add New Tag', new_tag_path, class: "float-right btn btn-success" %>
		<% else %>
			<h3 class="float-left">Purchased packages</h3>
		<% end %>
	</div>
	<br/>
	<div class="content-area mt-4">
		<% if @tags_count > 0 %>
			<div class="row mt-4 ml-4">
				<table id="tags-table" class="datatable table table-striped table-bordered dt-responsive nowrap" data-source="<%= tags_path(format: :json) %>">
				  <thead>
			    <tr>
			      <th>Name</th>
			      <th>Description</th>
			      <th>Created At</th>
			    </tr>
				  </thead>
				  <tbody>
				  </tbody>
				</table>
			</div>
		<% else %>
			<div class="admin-norecord">
				<h6>No tags are present right now.</h6>
			</div>
		<%end%>
	</div>
</div>
