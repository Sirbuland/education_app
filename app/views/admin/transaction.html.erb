

	<div class="container">


			<div class="heading mt-4 mb-2">
		<% if current_user.super_admin %>
			<h3 class="float-right-left">
				All Transactions
			</h3>
			
		
		<% end %>
	</div>
	<div class="container" style="margin-top:50px;">
	<table id="example" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Post ID</th>
                <th>Created by</th>
                <th>Created at</th>
                <th>Edited by</th>
                <th>Edited at</th>
                <th>Points Earned</th>
            </tr>
        </thead>
        <tbody>
            <% @post.each do |post|%>
            <tr>
                <td><%= post.id%></td>
                <td><%= post.student.full_name%></td>
                <td><%= post.created_at.strftime("%d/%m/%Y on %I:%M:%S")%></td>
                <td><% post.tutors.each do |tutor| %>
					            <% if post.tutor_id == tutor.id %>
					              <%= tutor.full_name %>
				              <% end %>	
				           <% end %>
                </td>
                <td><%= post.updated_at.strftime("%d/%m/%Y on %I:%M:%S")%></td>
               <td><% post.credits.each do |credit|%>
               <%=   credit.total_credits/2%>
               <% end %>
               </td> 
            </tr>
            <% end %>
        </tbody>
        
    </table>
    </div>
</div>
