<h1 align="center">Create a new Category</h1>
<hr>


<%= render'shared/error', obj:@category %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of category",autofocus: true %>
        </div>
      </div>
       <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create category"%>
        </div>
       </div>
    </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit class: "btn btn-primary btn-lg btn-xlg" %>
    </div>
      </div>
     <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to categories listing", categories_path %> ]
    </div>
</div>

