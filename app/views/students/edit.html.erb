<div class="container">
<div class="row">
	<div class="col-12 offset-1">
		<div class="form-area mt-4">
			<%= simple_form_for @student, url: student_path(id: current_user.id), method: :put, html: {multipart: true} do |f| %>
				<h3>Personal Information</h3>
				<%= f.input :username, placeholder: 'Username' %>
				<%= f.input :full_name, label: 'Name', placeholder: 'Full Name' %>
				<%= f.input :occupation, placeholder: 'Occupation' %>
				<%= f.input :city, placeholder: 'City' %>
				<%= f.input :country, placeholder: 'Country' %>
				<%= f.input :native_language, collection: Language.all, label_method: :name, value_method: :id, placeholder: 'Native Language' %>
        <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 100, end_year: Date.today.year %>
				<%= f.input :gender, collection: User.genders, include_blank: false, placeholder: 'Gender' %>
				<%= f.input :profile_pic, as: :file, label: "Profile Picture" %>
				<div class="action mb-4 float-right">
        	<%= f.submit 'Update', class: 'btn btn-success' %>
        </div>
			<% end %>
		</div>
	</div>
</div>
</div>
