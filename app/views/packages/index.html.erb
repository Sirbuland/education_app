<div class="container">
	<div class="heading mt-4 mb-2">
		<h3 class="float-left">
			All Packages
		</h3>
		<%= link_to 'Add New Package', new_package_path, class: "float-right btn btn-success" %>
	</div>
	<br/>
	<div class="content-area mt-4">
		<% if @packages_count > 0 %>
			<div class="row mt-4 ml-4">
				<table id="packages-table" class="datatable table table-striped table-bordered dt-responsive nowrap" data-source="<%= packages_path(format: :json) %>">
				  <thead>
			    <tr>
			      <th>Name</th>
			      <th>Price</th>
			      <th>Total no of characters</th>
			      <th>Total credits</th>
			      <th>Bonus</th>
			      <th>Created date</th>
			      <th>Edit</th>
			      <th>Delete</th>
			    </tr>
				  </thead>
				  <tbody>
				  </tbody>
				</table>
			</div>
		<% else %>
			<div class="admin-norecord">
				<h6>No packages are present right now.</h6>
			</div>
		<% end %>
	</div>
</div>