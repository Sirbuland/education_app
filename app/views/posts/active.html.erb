<br>
<h1 align="center"> Active Posts</h1><hr>
<div class ="container">
 <div class="row">
	<div class = "well col-md-12 col-md-offset-6 ">
	 <% @posts.each do |post|%>
	  <% if post.student_id == current_user.id%>
	   <% if post.status == "Pending"%>
	    <div class= "container post">
       <div class = "pull-right post_status"><small>Post Status:</small> <small style = "color: green;"><%= post.status%></small></div>
			 <div class = "pull-left post_status"><small> Created at <%= post.created_at.strftime("%d/%m/%Y on %I:%M:%S")%>    </small></div><br>
			 <div class = "org_text"><p class =" center original_text"><%= simple_format(post.original_text)%></p></div><br>
	     <div class="row">
			  &nbsp;&nbsp;Category:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.category.name%>
			  &nbsp;</h4>
			  Language:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.language.name%></h4></div><br><br>
			  <% post.tags.each do |pos|%>
			   <h5 class ="pull-left"  style="color:#B1A7A7;"> <%= pos.name%> &nbsp; &nbsp;</h5>
			  <%end%><br>
	    </div>
	      
	    <% else if post.status == "Edited"%>
       <div class= "container post">
         <div class = "pull-right post_status"><small>Post Status:</small> <small style = "color: #FFBA01;"><%= post.status%></small></div>
			   <div class = "pull-left post_status"><small> Created at <%= post.created_at.strftime("%d/%m/%Y on %I:%M:%S")%>  </small></div><br>
			   <div class = "org_text"><p class =" center original_text"><%= simple_format(post.original_text)%></p></div><br>
		     <div class="row">
			    &nbsp;&nbsp;Category:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.category.name%>
			   	 &nbsp;</h4>
			    Language:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.language.name%></h4></div><br><br>
				  <% post.tags.each do |pos|%>
				   <h5 class ="pull-left" style="color:#B1A7A7;"> <%= pos.name%> &nbsp; &nbsp;</h5>
				  <%end%><br><br>
				  <h5 class ="pull-left"> Edited Text: &nbsp; &nbsp;</h5> <br>
		      <div class = "org_text"><p class =" center original_text"><%= simple_format(post.edited_text)%></p></div><br>
				  <div class = "pull-left post_status"><small>Edited at <%= post.updated_at.strftime("%d/%m/%Y on %I:%M:%S")%>   By <%= post.tutor.full_name%></small></div><br>
				  <div class="pull-right buttons">
		        <%= button_to 'Decline', {:controller => "posts", :action => "declineapp", :id => post.id},
		          {:class => "buttonDec"}%></div>
				  <div class="pull-right buttons">
		        <%= button_to 'Accept', {:controller => "posts", :action => "acceptapp", :id => post.id},
		          {:class => "buttonAcc" }%></div><br>
		    </div>

		  <% else if post.status == "SubmittedToAdmin"%>
        <div class= "container post">
         <div class = "pull-right post_status"><small>Post Status:</small> <small style = "color: #581845;">Submitted To Admin</small></div>
			   <div class = "pull-left post_status"><small> Created at <%= post.created_at.strftime("%d/%m/%Y on %I:%M:%S")%> </small></div><br>
			   <div class = "org_text"><p class =" center original_text"><%= simple_format(post.original_text)%></p></div><br>
		     <div class="row">
			    &nbsp;&nbsp;Category:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.category.name%>
			   	  &nbsp;</h4>
			    Language:<h4 class ="pull-left"style="color:#B1A7A7;"> &nbsp;<%= post.language.name%></h4></div><br><br>
				 <% post.tags.each do |pos|%>
				   <h5 class ="pull-left" style="color:#B1A7A7;"> <%= pos.name%> &nbsp; &nbsp;</h5>
				 <%end%><br><br>
				 <h5 class ="pull-left"> Edited Text: &nbsp; &nbsp;</h5> <br>
		     <div class = "org_text"><p class =" center original_text"><%= simple_format(post.edited_text)%></p></div><br>
				 <div class = "pull-left post_status"><small>Edited at <%= post.updated_at.strftime("%d/%m/%Y on %I:%M:%S")%>
				     By <%= post.tutor.full_name%></small></div><br><br>
			 </div>
		  <%end%>
     <%end%>
	  <%end%>
   <%end%>	
  <%end%>
  <div class=" centera">
    <%= will_paginate @posts,renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div> 
 </div>
</div></div>
